<?xml version="1.0" encoding="utf-8"?>
<Page
	x:Class="OfficeEquipmentManager.AuthorizationPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="AuthorizationPage">
    <Grid>

        <StackPanel
			VerticalAlignment="Center"
			HorizontalAlignment="Center">
            <StackPanel
				Orientation="Horizontal">
                <TextBlock
					Width="100">Введите логин</TextBlock>
                <TextBox Text="{Binding Login,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" KeyUp="textBoxLogin_KeyDown"
					x:Name="textBoxLogin" Width="100"/>
            </StackPanel>
            <StackPanel
				Margin="0 5 0 5"
				Orientation="Horizontal">
                <TextBlock
					Width="100">Введите пароль</TextBlock>
                <TextBox Text="{Binding Password,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
					Name="passwordBox" KeyUp="passwordBox_KeyUp"
					Width="100" />
            </StackPanel>
            <Button
				Height="35"
				Name="buttonAuth" IsDefault="True"
				Command="{Binding AuthCommand}">Авторизоваться</Button>
        </StackPanel>
        <TextBlock
			Cursor="Hand"
			VerticalAlignment="Bottom"
			HorizontalAlignment="Center"
			Margin="0 0 0 5"
			PreviewMouseDown="TextBlock_PreviewMouseDown">Еще нет аккаунта? Зарегестрируйтесь</TextBlock>
    </Grid>
</Page>