<?xml version="1.0" encoding="utf-8"?>
<Page
	x:Class="OfficeEquipmentManager.RegistraionPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="RegistraionPage"
	Height="500"
	Width="800">
	<Grid>
		<StackPanel
			VerticalAlignment="Center"
			HorizontalAlignment="Center">
			<StackPanel
				Orientation="Horizontal">
				<TextBlock
					Width="265">Введите ФИО</TextBlock>
				<TextBox
					x:Name="fullnameBox"
					Width="100" />
			</StackPanel>
			<StackPanel
				Orientation="Horizontal">
				<TextBlock
					Width="265">Введите логин</TextBlock>
				<TextBox
					x:Name="loginBox"
					Width="100" />
			</StackPanel>
			<StackPanel
				Margin="0 5 0 5"
				Orientation="Horizontal">
				<TextBlock
					Width="265">Введите пароль</TextBlock>
				<PasswordBox
					x:Name="passwordBox"
					Width="100" />
			</StackPanel>
			<StackPanel
				Orientation="Horizontal">
				<TextBlock
					Width="265">Введите ссылку на изображение из интернета</TextBlock>
				<TextBox
					x:Name="imageLinkBox"
					TextChanged="ImageLinkBox_TextChanged"
					Width="100" />
				<Button
					x:Name="buttonSetImageFromIO"
					Click="ButtonSetImageFromIO_Click">Указать место изображения на компьютере</Button>
			</StackPanel>
			
				<StackPanel
				Orientation="Horizontal">
				<TextBlock
					Width="265">Введите email</TextBlock>
				<TextBox
					x:Name="emailBox"
					Width="100" />
			</StackPanel>
			
							<StackPanel
				Orientation="Horizontal">
				<TextBlock
					Width="265">Введите телефон</TextBlock>
				<TextBox
					x:Name="phoneBox"
					Width="100" />
			</StackPanel>
			
			<Button
				Height="35"
				x:Name="buttonRegister"
				Click="ButtonRegister_Click">Зарегистрироваться</Button>
		</StackPanel>
		<Image
			Width="200"
			Height="200"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			x:Name="userImage" />
		<TextBlock
			x:Name="buttonAuthorization"
			PreviewMouseDown="ButtonAuthorization_Click" Margin="0 0 0 5"
			VerticalAlignment="Bottom"
			HorizontalAlignment="Center" Cursor="Hand">Уже зарегистрированы? Авторизуйтесь</TextBlock>
	</Grid>
</Page>