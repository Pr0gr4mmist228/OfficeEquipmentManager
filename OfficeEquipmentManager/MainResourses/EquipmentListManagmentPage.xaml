<?xml version="1.0" encoding="utf-8"?>
<Page
	x:Class="OfficeEquipmentManager.EquipmentListManagmentPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="EquipmentListManagmentPage" xmlns:local="clr-namespace:OfficeEquipmentManager.MainResourses" xmlns:dd="clr-namespace:GongSolutions.Wpf.DragDrop;assembly=GongSolutions.Wpf.DragDrop">
	<Grid>
        <Button
			Name="buttonBack"
			Click="ButtonBack_Click"
			Width="50"
			Height="20"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Margin="5,5,0,0">Назад</Button>

        <ListBox
			Margin="0 40 0 0"
			x:Name="listEquipment" dd:DragDrop.IsDragSource="True"  dd:DragDrop.IsDropTarget="True">
			<ListBox.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel />
				</ItemsPanelTemplate>
			</ListBox.ItemsPanel>
			
			<ListBox.ContextMenu>
				<local:ContextMenuControl></local:ContextMenuControl>
			</ListBox.ContextMenu>
		</ListBox>
	</Grid>
</Page>